# Environment Configuration Example
# Copy this to .env and adjust values as needed

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here

# Application Settings
APP_LOG_LEVEL=INFO
APP_AUTO_START=False

# Audio Configuration
AUDIO_DEVICE_ID=-1
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_CHUNK_SIZE=2048

# Whisper Configuration
WHISPER_MODEL=base
WHISPER_LANGUAGE=pt
WHISPER_DEVICE=cpu
WHISPER_FP16=False

# AI Configuration
AI_CONTEXT_ENABLED=True
AI_MIN_CONFIDENCE=0.6
AI_EMBEDDING_MODEL=sentence-transformers/distiluse-base-multilingual-cased-v2

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=5000
SERVER_WORKERS=1

# Database
DATABASE_DIR=.
DATABASE_CLEANUP_DAYS=30

# Paths
CONFIG_DIR=.
LOGS_DIR=logs
AUDIO_LIBRARY_DIR=audio_library
